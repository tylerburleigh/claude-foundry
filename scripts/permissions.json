{
  "description": "Required permissions for claude-foundry plugin",
  "version": "2.1.0",
  "categories": {
    "skills": {
      "description": "All foundry plugin skills (sdd-plan, sdd-next, etc.)",
      "allow": [
        "Skill(foundry:*)"
      ]
    },
    "mcp_tools": {
      "description": "All foundry-mcp MCP router tools (wildcard)",
      "allow": [
        "mcp__plugin_foundry_foundry-mcp__*"
      ]
    },
    "mcp_ctl": {
      "description": "Foundry control server for mode toggling",
      "allow": [
        "mcp__plugin_foundry_foundry-ctl__*"
      ]
    },
    "git_commands": {
      "description": "Git read operations for code inspection",
      "allow": [
        "Bash(git status:*)",
        "Bash(git diff:*)",
        "Bash(git log:*)",
        "Bash(git rev-parse:*)",
        "Bash(git branch:*)",
        "Bash(git show:*)"
      ]
    },
    "testing": {
      "description": "Test execution with pytest",
      "allow": [
        "Bash(pytest:*)",
        "Bash(python -m pytest:*)"
      ]
    },
    "foundry_cli": {
      "description": "Foundry CLI operations",
      "allow": [
        "Bash(foundry-mcp:*)",
        "Bash(foundry-cli:*)"
      ]
    },
    "ai_providers": {
      "description": "External AI provider CLIs",
      "allow": [
        "Bash(codex:*)",
        "Bash(claude:*)",
        "Bash(gemini:*)",
        "Bash(cursor-agent:*)",
        "Bash(opencode:*)"
      ]
    },
    "specs_write": {
      "description": "Write access to spec directories",
      "allow": [
        "Write(//**/specs/pending/**)",
        "Write(//**/specs/active/**)",
        "Write(//**/specs/completed/**)",
        "Write(//**/specs/archived/**)"
      ]
    },
    "specs_edit": {
      "description": "Edit access to spec directories",
      "allow": [
        "Edit(//**/specs/pending/**)",
        "Edit(//**/specs/active/**)",
        "Edit(//**/specs/completed/**)",
        "Edit(//**/specs/archived/**)"
      ]
    }
  },
  "deny_rules": {
    "description": "Protective restrictions to force MCP tool usage",
    "deny": ["Read(//**/specs/**/*.json)"]
  }
}
