{
  "description": "Required permissions for claude-foundry plugin",
  "version": "2.0.0",
  "categories": {
    "mcp_tools": {
      "description": "All foundry-mcp MCP router tools (17 routers)",
      "allow": [
        "mcp__plugin_foundry_foundry-mcp__authoring",
        "mcp__plugin_foundry_foundry-mcp__code",
        "mcp__plugin_foundry_foundry-mcp__environment",
        "mcp__plugin_foundry_foundry-mcp__error",
        "mcp__plugin_foundry_foundry-mcp__health",
        "mcp__plugin_foundry_foundry-mcp__journal",
        "mcp__plugin_foundry_foundry-mcp__lifecycle",
        "mcp__plugin_foundry_foundry-mcp__metrics",
        "mcp__plugin_foundry_foundry-mcp__plan",
        "mcp__plugin_foundry_foundry-mcp__pr",
        "mcp__plugin_foundry_foundry-mcp__provider",
        "mcp__plugin_foundry_foundry-mcp__review",
        "mcp__plugin_foundry_foundry-mcp__server",
        "mcp__plugin_foundry_foundry-mcp__spec",
        "mcp__plugin_foundry_foundry-mcp__task",
        "mcp__plugin_foundry_foundry-mcp__test",
        "mcp__plugin_foundry_foundry-mcp__verification"
      ]
    },
    "git_commands": {
      "description": "Git read operations for code inspection",
      "allow": [
        "Bash(git status:*)",
        "Bash(git diff:*)",
        "Bash(git log:*)",
        "Bash(git rev-parse:*)",
        "Bash(git branch:*)",
        "Bash(git show:*)"
      ]
    },
    "testing": {
      "description": "Test execution with pytest",
      "allow": [
        "Bash(pytest:*)",
        "Bash(python -m pytest:*)"
      ]
    },
    "foundry_cli": {
      "description": "Foundry CLI operations",
      "allow": [
        "Bash(foundry-mcp:*)",
        "Bash(foundry-cli:*)"
      ]
    },
    "ai_providers": {
      "description": "External AI provider CLIs",
      "allow": [
        "Bash(codex:*)",
        "Bash(claude:*)",
        "Bash(gemini:*)",
        "Bash(cursor-agent:*)",
        "Bash(opencode:*)"
      ]
    },
    "specs_write": {
      "description": "Write access to spec directories",
      "allow": [
        "Write(//**/specs/pending/**)",
        "Write(//**/specs/active/**)",
        "Write(//**/specs/completed/**)",
        "Write(//**/specs/archived/**)"
      ]
    },
    "specs_edit": {
      "description": "Edit access to spec directories",
      "allow": [
        "Edit(//**/specs/pending/**)",
        "Edit(//**/specs/active/**)",
        "Edit(//**/specs/completed/**)",
        "Edit(//**/specs/archived/**)"
      ]
    }
  },
  "deny_rules": {
    "description": "Protective restrictions to force MCP tool usage",
    "deny": ["Read(//**/specs/**/*.json)"]
  }
}
